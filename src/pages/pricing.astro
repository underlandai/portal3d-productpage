const metadata = {
  title: 'Underland Portal3D 3D Visualisation Pricing',
  description: 'Showcase subsurface mining data in stunning 3D, directly in any web browser. Tailored solutions for the mining and exploration industry.',
  canonical: 'https://portal3d.underlandex.com/pricing',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    title: 'Underland Portal3D 3D Visualisation Pricing',
    description: 'Showcase subsurface mining data in stunning 3D, directly in any web browser. Tailored solutions for the mining and exploration industry.',
