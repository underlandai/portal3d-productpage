---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <ContactUs
    title="Contact the Team"
    companySizeOptions={[
      'Please Select',
      '1–50',
      '51–250',
      '251–500',
      '501–1,000',
      '1,001–5,000',
      '5,001–10,000',
      '10,001–20,000',
      '20,001+',
    ]}
    productOptions={[
      'Select one from the dropdown options below',
      'underland.cloud Professional',
      'underland.cloud Team',
      'underland.cloud Enterprise',
      'underland.cloud API',
    ]}
    inputs={[
      {
        type: 'text',
        name: 'firstName',
        label: 'First name',
        required: true,
        width: 'half'
      },
      {
        type: 'text',
        name: 'lastName',
        label: 'Last name',
        required: true,
        width: 'half'
      },
      {
        type: 'email',
        name: 'email',
        label: 'Work email',
        required: true,
      },
      {
        type: 'tel',
        name: 'phoneNumber',
        label: 'Phone number',
        required: true,
      },
      {
        type: 'text',
        name: 'companyName',
        label: 'Company name',
        placeholder: 'Please fill in this field.',
        required: true,
      },
    ]}
    textarea={{
      label: 'Can you share more about your business needs and challenges?',
      required: true,
    }}
    disclaimer={{
      label: 'By submitting, you agree to the collection of your personal information.',
      required: true,
    }}
    button="Submit"
    description="Our support team typically responds within 24 business hours."
  />
</Layout>
