---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- Email Information Section -->
  <section class="pt-16 pb-8 px-4 sm:px-6 mx-auto max-w-6xl">
    <div class="text-center mb-8">
      <h2 class="font-bold leading-tighter tracking-tighter font-heading text-heading text-3xl md:text-4xl mb-4">
        Get in Touch
      </h2>
      <p class="text-xl text-muted mb-8">
        Connect with us directly or use the form below
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Underland View Enquiries -->
      <div class="text-center p-6 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900">
        <div class="mb-4">
          <div class="w-12 h-12 mx-auto bg-primary rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
            Underland View Enquiries
          </h3>
          <a 
            href="mailto:info@underlandportal.com" 
            class="text-primary hover:text-blue-700 dark:hover:text-blue-300 transition-colors font-medium"
          >
            info@underlandportal.com
          </a>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          General inquiries, support, and product information
        </p>
      </div>
      
      <!-- Investor Relations -->
      <div class="text-center p-6 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900">
        <div class="mb-4">
          <div class="w-12 h-12 mx-auto bg-secondary rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 00-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
            Investor Relations
          </h3>
          <a 
            href="mailto:ir@lichen.com.au" 
            class="text-secondary hover:text-green-700 dark:hover:text-green-300 transition-colors font-medium"
          >
            ir@lichen.com.au
          </a>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          Investment opportunities and financial inquiries
        </p>
      </div>
    </div>
  </section>

  <ContactUs
    companySizeOptions={[
      'Employees',
      '1 - 5 employees',
      '6 - 30 employees',
      '31 - 200 employees',
      '201 - 500 employees',
      '501 - 2000 employees',
      '2000+ employees',
    ]}
    productOptions={[
      'Select a plan',
      'Casual (Free)',
      'Professional',
      'Enterprise',
      'API Access',
    ]}
    inputs={[
      {
        type: 'text',
        name: 'firstName',
        label: 'First name',
        required: true,
        width: 'half'
      },
      {
        type: 'text',
        name: 'lastName',
        label: 'Last name',
        required: true,
        width: 'half'
      },
      {
        type: 'text',
        name: 'jobTitle',
        label: 'Job title',
        required: false,
        width: 'half'
      },
      {
        type: 'email',
        name: 'email',
        label: 'Work email',
        required: true,
        width: 'half'
      },
      {
        type: 'tel',
        name: 'phoneNumber',
        label: 'Phone',
        required: false,
      },
    ]}
    consentText="We value your privacy. To learn more, visit our <a href='/privacy' class='text-primary hover:text-blue-700 dark:hover:text-blue-300 underline'>Privacy Statement</a>."
    additionalConsent={{
      label: 'Yes, I would like to receive marketing communications regarding Underland View products, services, and events. I can unsubscribe at any time.',
      required: false,
    }}
    button="CONTACT ME"
    description=""
  />
</Layout>
