---
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- Email Information Section -->
  <section class="pt-16 pb-8 px-4 sm:px-6 mx-auto max-w-6xl">
    <div class="text-center mb-8">
      <h2 class="font-bold leading-tighter tracking-tighter font-heading text-heading text-3xl md:text-4xl mb-4">
        Get in Touch
      </h2>
      <p class="text-xl text-muted mb-8">
        Connect with us directly or use the form below
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Underland Cloud Enquiries -->
      <div class="text-center p-6 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900">
        <div class="mb-4">
          <div class="w-12 h-12 mx-auto bg-primary rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
            Underland Cloud Enquiries
          </h3>
          <a 
            href="mailto:info@underland.cloud" 
            class="text-primary hover:text-blue-700 dark:hover:text-blue-300 transition-colors font-medium"
          >
            info@underland.cloud
          </a>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          General inquiries, support, and product information
        </p>
      </div>
      
      <!-- Investor Relations -->
      <div class="text-center p-6 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900">
        <div class="mb-4">
          <div class="w-12 h-12 mx-auto bg-secondary rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 00-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
            Investor Relations
          </h3>
          <a 
            href="mailto:ir@lichen.com.au" 
            class="text-secondary hover:text-green-700 dark:hover:text-green-300 transition-colors font-medium"
          >
            ir@lichen.com.au
          </a>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          Investment opportunities and financial inquiries
        </p>
      </div>
    </div>
  </section>

  <ContactUs
    companySizeOptions={[
      'Please Select',
      '1–50',
      '51–250',
      '251–500',
      '501–1,000',
      '1,001–5,000',
      '5,001–10,000',
      '10,001–20,000',
      '20,001+',
    ]}
    productOptions={[
      'Select one from the dropdown options below',
      'underland.cloud Professional',
      'underland.cloud Team',
      'underland.cloud Enterprise',
      'underland.cloud API',
    ]}
    inputs={[
      {
        type: 'text',
        name: 'firstName',
        label: 'First name',
        required: true,
        width: 'half'
      },
      {
        type: 'text',
        name: 'lastName',
        label: 'Last name',
        required: true,
        width: 'half'
      },
      {
        type: 'email',
        name: 'email',
        label: 'Work email',
        required: true,
      },
      {
        type: 'tel',
        name: 'phoneNumber',
        label: 'Phone number',
        required: true,
      },
      {
        type: 'text',
        name: 'companyName',
        label: 'Company name',
        placeholder: 'Please fill in this field.',
        required: true,
      },
    ]}
    textarea={{
      label: 'Can you share more about your business needs and challenges?',
      required: true,
    }}
    consentText="I consent to the processing of this information, and to receive the occasional email from Underland Cloud. Please read our <a href='/privacy' class='text-primary hover:text-blue-700 dark:hover:text-blue-300 underline'>privacy policy</a> to understand how we protect and manage your personal data."
    additionalConsent={{
      label: 'I agree to receive other communications from Underland Cloud.',
      required: false,
    }}
    button="Submit"
    description="Our support team typically responds within 24 business hours."
  />
</Layout>
